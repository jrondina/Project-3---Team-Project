<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/section_card_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:cardElevation="4dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/section_card_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="placeholder topic"
            android:padding="4dp"/>
        <ImageView
            android:id="@+id/section_card_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/glamping1_superjumbo"/>
        <TextView
            android:id="@+id/section_card_byline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/section_card_small_text"
            android:textColor="@android:color/darker_gray"
            android:text="By no one"
            android:layout_margin="3dp"/>
        <TextView
            android:id="@+id/section_card_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="Placeholder Headline"/>
        <TextView
            android:id="@+id/section_card_lead_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">
            <TextView
                android:id="@+id/section_card_updated_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/section_card_small_text"
                android:textColor="@android:color/darker_gray"
                android:text="placeholder date"
                android:layout_gravity="center_vertical"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="75"/>

            <ImageButton
                android:id="@+id/section_card_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bookmark_border_black_24dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/section_card_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_black_24dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>